{% extends 'base.html.twig' %}

{% block title %}Hello DashboardController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
    <p>hello</p>
    {% if app.user %}
        {% for game in games%}
            <li><a href="{{ game.link }}?userId={{ app.user.id }}?hash={{ game.hash(app.user) }}"><img src="images/{{ game.picture }}"></a></li>
        {% endfor %}
        {% else %}
            {% for game in games%}
                <li><a href='/login'><img src="images/{{ game.picture }}"></a></li>
            {% endfor %}
    {% endif %}
{% endblock %}
